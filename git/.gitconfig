[user]
    name = Raphael Zimmermann
    email = mail@raphael.li
[include]
    path = .gitlocal
[core]
    whitespace = warn
    excludesfile = ~/.gitignore
	autocrlf = input
[alias]
    a = add --patch
    st = status
    co = commit
	unstage = reset
    l = log --oneline --graph --decorate
    amend = commit --amend --no-edit
	uncommit = reset --soft HEAD~1
	sla = log --oneline --decorate --graph --all
[commit]
    template = ~/.gitmessage
[pull]
	ff = only
[merge]
	conflictstyle = diff3
[init]
	defaultBranch = main
[push]
	default = current
	autoSetupRemote = true
[rebase]
	autosquash = true
